@model SMS.Common.Paging.SortingPagingInfo

<form action="@Model.FormNameToSubmit" id="searchForm" method="GET">
    <div class="row">
        <div class="six columns">
            <table class="no-border searchTable">
                <tr>
                    <td class="right" data-globalLabelID="lblSearch">Search:</td>
                    <td><input type="text" name="textSearch" value="@Model.TextSearch" id="paging-TextSearch" /> </td>
                    <td>
                         <button type="submit" class="small" data-globalLabelID="lblSearch">Search</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(function() {
        $('#searchForm #paging-TextSearch').keypress(function(e) {
            if (e.which == 13) {
                $('#searchForm').submit();
            }
        });
        $('#searchForm button[type="submit"]').button({
            icons: {
                primary: "ui-icon-search"
            }
        });
    });
</script>