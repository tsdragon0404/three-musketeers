@model SMS.MvcApplication.Models.PopupModel
<div id="@Model.PopupID" title="@Model.PopupTitle" class="hide customer-popup">
    <table class="popup-table-header">
        <colgroup>
            <col class="col1" />
            <col class="col2" />
            <col class="col3" />
            <col class="col4" />
            <col class="col5" />
            <col class="col6" />
            <col class="col7" />
        </colgroup>
        <thead>
            <tr>
                <th>No</th>
                <th>Customer code</th>
                <th>Customer name</th>
                <th>Cell phone</th>
                <th>Address</th>
                <th>DOB</th>
                <th></th>
            </tr>
        </thead>
    </table>
    <div class="popup-content">
        <form>
            <table id="table-detail-@Model.PopupID">
                <colgroup>
                    <col class="col1" />
                    <col class="col2" />
                    <col class="col3" />
                    <col class="col4" />
                    <col class="col5" />
                    <col class="col6" />
                    <col class="col7" />
                </colgroup>
                <tbody id="customer-table">
                </tbody>
            </table>
        </form>
    </div>
    <div class="row">
        <input type="checkbox" id="useInputCustomer"/>
    </div>
    <div class="row">
        <input type="text" id="customerName" />
        <input type="text" id="cellPhone" />
        <input type="text" id="address" />
        <input type="text" id="DOB" />
        <button id="btnOK" data-labelID="lblOK">OK</button>
    </div>
    <div class="right popup-buttons">
        <button class="popupClose" data-labelID="lblClose">Close</button>
    </div>
</div>
<script src="@Url.Content("~/Scripts/customer-popup.js")"></script>
<script id="customer-tmpl" type="text/x-jquery-tmpl">
    {{each(idx) Data}}
    <tr class="{{if idx%2}}alt{{/if}}">
        <td>${idx + 1}</td>
        <td>${CustomerCode}</td>
        <td>${CustomerName}</td>
        <td>${CellPhone}</td>
        <td>${Address}</td>
        <td>${DOB}</td>
        <td class="center">
            <button id="select-${ID}">Select</button>
        </td>
    </tr>
    {{/each}}
</script>