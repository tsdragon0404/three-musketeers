@model SMS.MvcApplication.Models.PopupModel
<div id="@Model.PopupID" title="@Model.PopupTitle" class="hide customer-popup">
    <div id="customerInfo">
        <fieldset>
            <legend id="addCustomer">
                <input type="checkbox" id="useInputCustomer"/>
                <span data-labelID="lblCustomerInformation">Add Customer</span>
            </legend>
            <table>
                <tr>
                    <td  data-labelID="lblCustomerName">Customer name</td>
                    <td><input type="text" id="customerName" /></td>
                    <td data-labelID="lblCellPhone">Cell phone</td>
                    <td><input type="text" id="cellPhone" /></td>
                </tr>
                <tr>
                    <td data-labelID="lblAddress">Address</td>
                    <td><input type="text" id="address" /></td>
                    <td data-labelID="lblEmail">Email</td>
                    <td><input type="text" id="email" /></td>
                </tr>
                <tr>
                    <td colspan="4" class="center"><button id="btnOK" data-labelID="lblOK">Select</button></td>
                </tr>
            </table>
        </fieldset>
    </div>
    <table class="popup-table-header">
        <colgroup>
            <col class="col1" />
            <col class="col2" />
            <col class="col3" />
            <col class="col4" />
            <col class="col5" />
            <col class="col6" />
            <col class="col7" />
        </colgroup>
        <thead>
            <tr>
                <th data-labelID="lblNo">No</th>
                <th data-labelID="lblCustomerCode">Customer code</th>
                <th data-labelID="lblCustomerName">Customer name</th>
                <th data-labelID="lblCellPhone">Cell phone</th>
                <th data-labelID="lblAddress">Address</th>
                <th data-labelID="lblEmail">Email</th>
                <th></th>
            </tr>
        </thead>
    </table>
    <div class="popup-content">
        <form>
            <table id="table-detail-@Model.PopupID">
                <colgroup>
                    <col class="col1" />
                    <col class="col2" />
                    <col class="col3" />
                    <col class="col4" />
                    <col class="col5" />
                    <col class="col6" />
                    <col class="col7" />
                </colgroup>
                <tbody id="customer-table">
                </tbody>
            </table>
        </form>
    </div>
    <div class="right popup-buttons">
        <button class="popupClose" data-labelID="lblClose">Close</button>
    </div>
</div>
<script src="@Url.Content("~/Scripts/customer-popup.js")"></script>
<script id="customer-tmpl" type="text/x-jquery-tmpl">
    {{each(idx) Data}}
    <tr class="{{if idx%2}}alt{{/if}}">
        <td>${idx + 1}</td>
        <td>${CustomerCode}</td>
        <td>${CustomerName}</td>
        <td>${CellPhone}</td>
        <td>${Address}</td>
        <td>${Email}</td>
        <td class="center">
            <button id="select-${ID}">Select</button>
        </td>
    </tr>
    {{/each}}
</script>
<style type="text/css">
.customer-popup .col1 {
    width: 70px;
}

.customer-popup .col2 {
    width: 150px;
}

.customer-popup .col3 {
    width: 200px;
}

.customer-popup .col4 {
    width: 120px;
}

.customer-popup .col5 {
    width: 150px;
}

.customer-popup .col6 {
    width: 100px;
}

.discount-popup input {
    width: 100% !important;
    padding: 0px !important;
}

.customer-popup fieldset legend {
    margin-left: 20px;
    padding-bottom: 8px;
}

.customer-popup fieldset table, .customer-popup fieldset table tr td {
    border: none;
}

.customer-popup #customerInfo {
    padding-bottom: 3px;
}

.customer-popup #addCustomer {
    cursor: pointer;
    -webkit-user-select: none;  
    -moz-user-select: none;    
    -ms-user-select: none;      
    user-select: none;
}
</style>